<% content_for :head do %>
  <%= stylesheet_link_tag    :coderay %>
  <%= javascript_include_tag :requests %>
<% end %>

<%= form_tag requests_path, :id => 'curlosaurus', :autocomplete => 'off' do %>

  <div>
  <%= text_field_tag :url, nil, :title => "url" %>
  </div>

  <div>
    <span id="body-toggle">+ show body</span>

    <%= select_tag :method, %-<option value="get">GET</option><option value="post">POST</option><option value="put">PUT</option><option value="delete">DELETE</option>-.html_safe %>

    <%= check_box_tag :follow %>
    <%= label_tag :follow, "Follow Redirects" %>
  </div>

  <div id="body-block">
    <%= text_area_tag :body, nil, :title => 'body' %>
  </div>

  <div id="header-block">
    <span id="add-header">+ add header</span>
  </div>

  <div>
    <%= check_box_tag :auth %>
    <%= label_tag :auth, "Basic Auth" %>
  </div>

  <div id="submit-block">
    <%= image_tag "ajax-loader.gif", :id => "loader" %>
    <%= submit_tag "Roar", :id => "roar" %>
  </div>

  <div id="auth-block">
    <%= text_field_tag :user, nil, :title => "username" %>
    <%= password_field_tag :pass, nil, :title => "password" %>
  </div>

  <div class="clear"></div>

<% end %>

<div id="result-holder">
  <div id="header"></div>
  <div id="body"></div>
</div>
